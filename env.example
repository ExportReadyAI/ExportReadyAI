# =============================================================================
# ExportReady.AI - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# Django Settings
# =============================================================================
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-this-in-production

# Admin Registration Code (for bootstrap first admin without existing token)
# Set this to enable admin registration via POST /auth/register-admin/ with admin_code
# Leave empty to disable code-based admin registration
ADMIN_REGISTRATION_CODE=your-admin-registration-code

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated, e.g., localhost,127.0.0.1,yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database Configuration (Supabase PostgreSQL)
# =============================================================================
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://postgres:your-password@db.your-project.supabase.co:5432/postgres

# =============================================================================
# JWT Configuration
# =============================================================================
# Access token lifetime in minutes (default: 60)
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60

# Refresh token lifetime in days (default: 7)
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed origins (comma-separated, e.g., http://localhost:3000,https://yourdomain.com)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Allow all origins (True for development only, use with caution)
CORS_ALLOW_ALL_ORIGINS=False

# =============================================================================
# Logging
# =============================================================================
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# Kolosal AI Configuration (Claude Sonnet 4.5)
# =============================================================================
# Get your API key from: https://www.kolosal.ai/dashboard
# Used for AI-powered features:
# - Product pricing recommendations with market analysis
# - Container optimization suggestions
# - HS Code mapping and product enrichment
KOLOSAL_API_KEY=kol_your_api_key_here
KOLOSAL_BASE_URL=https://api.kolosal.ai/v1
# Model name must match exactly (with spaces): "Claude Sonnet 4.5", "GPT-4o Mini", etc.
KOLOSAL_MODEL=Claude Sonnet 4.5

# =============================================================================
# Supabase Storage Configuration (Module 7: Educational Materials)
# =============================================================================
# Get these from your Supabase project settings: https://app.supabase.com
# Used for file storage (PDFs, images) in educational materials
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_STORAGE_BUCKET=educational-materials

# =============================================================================
# Production Only (uncomment in production)
# =============================================================================
# SECURE_SSL_REDIRECT=True
# SENTRY_DSN=your-sentry-dsn-here

