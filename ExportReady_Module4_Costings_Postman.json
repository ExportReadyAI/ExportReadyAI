{
  "info": {
    "name": "ExportReady Module 4 - Costings & Pricing",
    "description": "API endpoints for Module 4: Kalkulator Finansial & Logistik (Costing). Includes price calculations (EXW, FOB, CIF) and container optimization.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Exchange Rate Management",
      "item": [
        {
          "name": "Get Current Exchange Rate",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has rate data', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.data).to.have.property('rate');",
                  "  pm.expect(jsonData.data).to.have.property('source');",
                  "  pm.expect(jsonData.data.rate).to.be.greaterThan(0);",
                  "});",
                  "",
                  "// Save rate for calculations",
                  "var jsonData = pm.response.json();",
                  "pm.environment.set('exchange_rate', jsonData.data.rate);"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/costings/exchange-rate/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "costings", "exchange-rate", ""]
            }
          }
        },
        {
          "name": "Update Exchange Rate (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Exchange rate updated', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.data.rate).to.equal(parseFloat(pm.environment.get('new_rate')));",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rate\": \"16500.00\",\n  \"source\": \"manual\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/costings/exchange-rate/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "costings", "exchange-rate", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Costing CRUD Operations",
      "item": [
        {
          "name": "Create Costing with AI Calculations",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201 Created', function() {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has calculated prices', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.data).to.have.property('recommended_exw_price');",
                  "  pm.expect(jsonData.data).to.have.property('recommended_fob_price');",
                  "  pm.expect(jsonData.data).to.have.property('recommended_cif_price');",
                  "  pm.expect(jsonData.data).to.have.property('container_20ft_capacity');",
                  "  pm.expect(parseFloat(jsonData.data.recommended_exw_price)).to.be.greaterThan(0);",
                  "  pm.expect(parseFloat(jsonData.data.recommended_fob_price)).to.be.greaterThan(parseFloat(jsonData.data.recommended_exw_price));",
                  "});",
                  "",
                  "// Save costing ID for future operations",
                  "var jsonData = pm.response.json();",
                  "pm.environment.set('costing_id', jsonData.data.id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product_id\": {{product_id}},\n  \"cogs_per_unit\": \"50000.00\",\n  \"packing_cost\": \"5000.00\",\n  \"target_margin_percent\": \"30.00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/costings/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "costings", ""]
            }
          }
        },
        {
          "name": "List Costings (Pagination)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains costings array', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.data).to.be.an('array');",
                  "  pm.expect(jsonData).to.have.property('pagination');",
                  "});",
                  "",
                  "pm.test('UMKM sees only their products', function() {",
                  "  var jsonData = pm.response.json();",
                  "  if (jsonData.data.length > 0) {",
                  "    pm.expect(jsonData.data[0]).to.have.property('recommended_exw_price');",
                  "  }",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/costings/?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "costings", ""],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Costing Detail",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains complete pricing data', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.id).to.equal(parseInt(pm.environment.get('costing_id')));",
                  "  pm.expect(jsonData).to.have.property('recommended_exw_price');",
                  "  pm.expect(jsonData).to.have.property('recommended_fob_price');",
                  "  pm.expect(jsonData).to.have.property('container_20ft_capacity');",
                  "  pm.expect(jsonData).to.have.property('optimization_notes');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/costings/{{costing_id}}/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "costings", "{{costing_id}}", ""]
            }
          }
        },
        {
          "name": "Update Costing & Recalculate",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Costing recalculated with new values', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(parseFloat(jsonData.data.cogs_per_unit)).to.equal(60000);",
                  "  pm.expect(parseFloat(jsonData.data.target_margin_percent)).to.equal(35);",
                  "  pm.expect(parseFloat(jsonData.data.recommended_exw_price)).to.be.greaterThan(0);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cogs_per_unit\": \"60000.00\",\n  \"packing_cost\": \"7000.00\",\n  \"target_margin_percent\": \"35.00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/costings/{{costing_id}}/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "costings", "{{costing_id}}", ""]
            }
          }
        },
        {
          "name": "Delete Costing",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Costing deleted successfully', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.success).to.be.true;",
                  "  pm.expect(jsonData.message).to.include('deleted successfully');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/costings/{{costing_id}}/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "costings", "{{costing_id}}", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Access Control Tests",
      "item": [
        {
          "name": "UMKM cannot view other user's costing (403)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 403 Forbidden', function() {",
                  "  pm.response.to.have.status(403);",
                  "});",
                  "",
                  "pm.test('Error response is formatted correctly', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.success).to.be.false;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{other_access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/costings/{{costing_id}}/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "costings", "{{costing_id}}", ""]
            }
          }
        },
        {
          "name": "UMKM cannot update exchange rate (403)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 403 Forbidden', function() {",
                  "  pm.response.to.have.status(403);",
                  "});",
                  "",
                  "pm.test('Only admin can update exchange rate', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.success).to.be.false;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rate\": \"17000.00\",\n  \"source\": \"manual\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/costings/exchange-rate/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "costings", "exchange-rate", ""]
            }
          }
        }
      ]
    }
