script:post-response {
  if (res.getStatus() === 201) {
      var jsonData = res.getBody();
      bru.setVar('product_id', jsonData.data.id);
      bru.setVar('product_id_food', jsonData.data.id);
      
      test('âœ… PBI-M2-03: Product created successfully', function () {
          expect(jsonData.success).to.be.true;
          expect(jsonData.data.id).to.be.a('number');
          expect(jsonData.data.name_local).to.eql('Keripik Singkong Pedas Manis');
      });
      
      console.log('Product ID:', jsonData.data.id);
  } else {
      console.log('Error:', JSON.stringify(res.getBody()));
  }
}

