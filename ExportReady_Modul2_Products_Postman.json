              "mode": "raw",
              "raw": "{\n  \"name_local\": \"Keripik Tempe Premium - Updated\",\n  \"category_id\": 1,\n  \"description_local\": \"Keripik tempe renyah premium dengan bumbu pedas manis pilihan.\",\n  \"material_composition\": \"Tempe (85%), Minyak Kelapa (12%), Garam (1%), Bumbu Rempah Premium (2%)\",\n  \"production_technique\": \"Machine\",\n  \"finishing_type\": \"Natural Polish\",\n  \"quality_specs\": {\n    \"moisture\": \"4%\",\n    \"tolerance\": \"±1mm\",\n    \"finishing\": \"Extra Crisp\"\n  },\n  \"durability_claim\": \"18 Bulan\",\n  \"packaging_type\": \"Karton Premium\",\n  \"dimensions_l_w_h\": {\n    \"l\": 22,\n    \"w\": 16,\n    \"h\": 6\n  },\n  \"weight_net\": \"0.160\",\n  \"weight_gross\": \"0.180\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/products/{{product_id}}/",
              "host": ["{{base_url}}"],
              "path": ["products", "{{product_id}}", ""]
            }
          }
